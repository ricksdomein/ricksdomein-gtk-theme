# Maintainer:

_gitname=ricksdomein-gtk-theme
pkgname=ricksdomein-gtk-theme-git
_pkgname=ricksdomein-gtk-theme
pkgver=1
pkgrel=1
epoch=1
pkgdesc="A Material theme for GTK+ based environments."
url='A Materia theme with a dark Papirus icon theme for GTK+ based environments.'
arch=('i686' 'x86_64')
license=('GPL3')
source=("git+https://github.com/ricksdomein/$_gitname.git")
sha1sums=('SKIP')

provides=("${_pkgname}")
conflicts=("${_pkgname}")

package() {
    cd "${srcdir}/$_gitname"
    export destdir="$pkgdir/"
    mkdir -p "${pkgdir}/usr/share/themes"
    cp -r ricksdomein-gtk-theme "${pkgdir}/usr/share/themes/"
    mkdir -p "${pkgdir}/usr/share/icons"
    cp -r ricksdomein-icon-theme "${pkgdir}/usr/share/icons/"
}
